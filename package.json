{
  "name": "prisma-extension-kysely",
  "version": "3.0.0",
  "author": {
    "name": "Eoin O'Brien",
    "url": "https://eoin.ai",
    "email": "eoin@tracworx.ai"
  },
  "description": "Prisma extension for Kysely",
  "license": "MIT",
  "homepage": "https://github.com/eoin-obrien/prisma-extension-kysely#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/eoin-obrien/prisma-extension-kysely"
  },
  "bugs": {
    "url": "https://github.com/eoin-obrien/prisma-extension-kysely/issues"
  },
  "keywords": [
    "prisma",
    "@prisma/client",
    "extension",
    "kysely",
    "sql",
    "query builder",
    "orm",
    "database",
    "postgresql",
    "mysql",
    "sqlite"
  ],
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "prisma db push",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "build:clean": "rm -rf ./dist",
    "build:compile": "tsc -b tsconfig.json tsconfig.cjs.json && tsconfig-to-dual-package",
    "build": "npm run build:clean && npm run build:compile",
    "prepack": "npm run build",
    "prepare": "husky install",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "peerDependencies": {
    "@prisma/client": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "@prisma/client": "latest",
    "@prisma/extension-read-replicas": "^0.4.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commitizen": "^4.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "husky": "^9.0.0",
    "inquirer": "^8.2.6",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "kysely": "^0.27.0",
    "prettier": "3.7.4",
    "prisma": "latest",
    "prisma-kysely": "^1.7.1",
    "ts-jest": "^29.1.1",
    "tsconfig-to-dual-package": "^1.2.0",
    "typescript": "^5.0.0"
  }
}
